/**app.wxss**/
@import './miniprogram_npm/@vant/weapp/common/index.wxss';

/* 全局样式 */
page {
  background-color: #f7f8fa;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

/* 清除浮动 */
.clearfix:after {
  content: '';
  display: table;
  clear: both;
}

/* 文本溢出省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 多行文本溢出省略 */
.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 主题色 */
.theme-color {
  color: #ff4d4f;
}

.theme-bg {
  background-color: #ff4d4f;
}

/* 通用间距 */
.margin-top {
  margin-top: 20rpx;
}

.margin-bottom {
  margin-bottom: 20rpx;
}

.margin-left {
  margin-left: 20rpx;
}

.margin-right {
  margin-right: 20rpx;
}

.padding {
  padding: 20rpx;
}

/* 通用边框 */
.border {
  border: 1rpx solid #eee;
}

.border-top {
  border-top: 1rpx solid #eee;
}

.border-bottom {
  border-bottom: 1rpx solid #eee;
}

/* 通用圆角 */
.radius {
  border-radius: 8rpx;
}

/* 通用阴影 */
.shadow {
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 通用flex布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

/* 通用文本对齐 */
.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 通用字体大小 */
.font-small {
  font-size: 24rpx;
}

.font-normal {
  font-size: 28rpx;
}

.font-large {
  font-size: 32rpx;
}

/* 通用字体粗细 */
.font-bold {
  font-weight: bold;
}

/* 通用颜色 */
.text-primary {
  color: #333;
}

.text-secondary {
  color: #666;
}

.text-light {
  color: #999;
}

/* 通用背景色 */
.bg-white {
  background-color: #fff;
}

.bg-gray {
  background-color: #f7f8fa;
}

/* 通用按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-primary {
  background-color: #ff4d4f;
  color: #fff;
}

.btn-default {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #eee;
}

/* 通用输入框样式 */
.input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border-radius: 44rpx;
  background-color: #f7f8fa;
  font-size: 28rpx;
}

/* 通用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 通用列表样式 */
.list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

/* 通用弹窗样式 */
.popup {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.popup-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-content {
  padding: 30rpx;
}

.popup-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

/* 通用加载样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 通用空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 通用分割线样式 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 通用标签样式 */
.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.tag-primary {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.tag-success {
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

.tag-warning {
  color: #ffa940;
  background-color: rgba(255, 169, 64, 0.1);
}

/* 通用头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

/* 通用图片样式 */
.image {
  width: 100%;
  height: auto;
}

.image-round {
  border-radius: 8rpx;
}

.image-circle {
  border-radius: 50%;
}

/* 通用图标样式 */
.icon {
  width: 40rpx;
  height: 40rpx;
}

.icon-large {
  width: 60rpx;
  height: 60rpx;
}

.icon-small {
  width: 30rpx;
  height: 30rpx;
}

/* 通用动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.slide-up {
  animation: slideUp 0.3s ease-in-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.slide-down {
  animation: slideDown 0.3s ease-in-out;
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
  }
  to {
    transform: translateY(0);
  }
}

.slide-left {
  animation: slideLeft 0.3s ease-in-out;
}

@keyframes slideLeft {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

.slide-right {
  animation: slideRight 0.3s ease-in-out;
}

@keyframes slideRight {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

