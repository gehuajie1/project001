.item-two{
    /* position: relative; */
    width: 90%;
    min-height: 400rpx;
    max-height: 1100rpx;
    box-sizing: border-box;
    padding: 32rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: start;
    padding-top: 26rpx;
    padding-bottom: 50rpx;
    font-size: 24rpx;
    margin: 0px auto;
    background:rgba(0,0,0,0.5);
    overflow: auto;

}


.item-two .timeline:last-child .timeline-content{
    border: none !important;
}


.timeline{
    width: 90%;

}
.circle{
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    display: flex;
    background-color: rgba(51,186,99,1);
}

.timeline-content{
    position: relative;
    /* width: 100px; */
    margin-left: 7px;
    border-left: 1px solid rgba(51,186,99,1);
    min-height: 200px;
}
.set{
    width: 20%;
    height: 50rpx;
    position: relative;
    right: 0rpx;
}
.ss{
    transform: translate(0,-50%);
    width: 80%;
    height: 50rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: start;

}


.ss .date{
    width:100%;
    padding-left: 55rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgb(226, 155, 155);
}

.ss .remark{
    width:100%;
    padding-left: 55rpx;
    height:33rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgb(236, 114, 114);
    line-height:33rpx;
    margin-top: 10rpx;
    left: 30rpx;
}

.image{
    width: 60%;
    height: 300rpx;
    background-color: #fff;
    position: relative;
    left: 20px;
}
.image image{
    width: 100%;
    height: 100%;
}
