.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 10rpx;
}

.greeting {
  font-size: 28rpx;
  color: #969799;
}

.anniversary-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.anniversary-card .van-cell {
  padding: 20rpx 0;
}

.anniversary-card .van-cell__title {
  color: #666;
  font-size: 28rpx;
}

.anniversary-card .van-cell__value {
  color: #ff4d4f;
  font-size: 28rpx;
  font-weight: bold;
}

.anniversary-card .van-cell:last-child .van-cell__value {
  color: #ff4d4f;
  font-weight: bold;
}

.function-grid {
  margin-bottom: 20rpx;
}

.weather-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 自定义Vant组件样式 */
.van-grid-item__content {
  padding: 20rpx 8rpx !important;
}

.van-grid-item__icon {
  font-size: 48rpx !important;
  color: #FF69B4 !important;
}

.van-grid-item__text {
  color: #323233 !important;
  font-size: 28rpx !important;
  margin-top: 10rpx !important;
}

.van-cell {
  padding: 20rpx !important;
  white-space: nowrap !important;
}

.van-cell__title {
  color: #969799 !important;
  white-space: nowrap !important;
  flex: none !important;
  width: 240rpx !important;
}

.van-cell__value {
  color: #323233 !important;
  font-weight: 500 !important;
  white-space: nowrap !important;
  flex: 1 !important;
}

.date-info {
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.week {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.weather-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.location van-icon {
  margin-right: 8rpx;
}

.temperature-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.temperature {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

.weather-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 4rpx;
}

.weather-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.weather-item {
  display: flex;
  flex-direction: column;
}

.weather-item text:first-child {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.weather-item text:last-child {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.weather-suggestion {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.weather-suggestion van-icon {
  margin-right: 10rpx;
  color: #1989fa;
}

.weather-suggestion text {
  font-size: 26rpx;
  color: #666;
}

.weather-update-time {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
}

.error {
  color: #ee0a24;
}

.location-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.location-info image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.location-info text {
  font-size: 28rpx;
  color: #666;
}

.love-days {
  background: #FF69B4;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  text-align: center;
  color: white;
}

.love-days .title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.love-days .days {
  font-size: 60rpx;
  font-weight: bold;
}

.love-days .unit {
  font-size: 28rpx;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-item text {
  font-size: 28rpx;
  color: #333;
}

/* 登录页面样式 */
.login-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #969799;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 80% !important;
  height: 88rpx !important;
  border-radius: 44rpx !important;
  background: linear-gradient(135deg, #FF69B4, #FFB6C1) !important;
  border: none !important;
}

/* 已登录状态样式 */
.content {
  padding: 30rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #FF69B4, #FFB6C1);
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
  position: relative;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.welcome {
  font-size: 24rpx;
  opacity: 0.9;
}

.date {
  font-size: 28rpx;
  opacity: 0.9;
}

.logout-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

/* 恋爱天数 */
.love-days {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.days {
  font-size: 72rpx;
  font-weight: bold;
  color: #ff4d4f;
  display: block;
  margin-bottom: 10rpx;
}

.label {
  font-size: 28rpx;
  color: #969799;
}

/* 纪念日列表 */
.anniversary-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
}

.item-date {
  font-size: 24rpx;
  color: #969799;
  width: 120rpx;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: #323233;
}

.item-days {
  font-size: 24rpx;
  color: #ff4d4f;
} 