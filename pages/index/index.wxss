.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #FF69B4 0%, #FFB6C1 100%);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 105, 180, 0.15);
  color: #fff;
}

.user-info {
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.greeting {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.anniversary-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.anniversary-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF69B4, #FFB6C1);
}

.anniversary-card .van-cell {
  padding: 20rpx 32rpx;
  white-space: nowrap;
}

.anniversary-card .van-cell__title {
  color: #666;
  font-size: 28rpx;
  white-space: nowrap;
  flex: none;
  width: 240rpx;
}

.anniversary-card .van-cell__value {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
  white-space: nowrap;
  flex: 1;
}

.anniversary-card .van-cell:last-child .van-cell__value {
  color: #ff4d4f;
  font-weight: bold;
}

.anniversary-card .van-cell::after {
  display: none;
}

.function-grid {
  margin-bottom: 20rpx;
}

.weather-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 24rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.weather-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0) 70%);
  transform: rotate(30deg);
}

.weather-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.location {
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.location van-icon {
  margin-right: 8rpx;
}

.update-time {
  font-size: 24rpx;
  opacity: 0.9;
}

.weather-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  position: relative;
  z-index: 1;
}

.today-weather {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 16rpx 0;
}

.temperature {
  font-size: 72rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  min-width: 120rpx;
}

.weather-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.weather-text {
  font-size: 32rpx;
  font-weight: 500;
}

.wind-info {
  font-size: 26rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tomorrow-weather {
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
  padding-top: 24rpx;
  margin-top: 16rpx;
}

.title {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.weather-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.temp-range {
  font-size: 26rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.weather-suggestion {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.weather-suggestion van-icon {
  margin-right: 10rpx;
  color: #1989fa;
}

.weather-suggestion text {
  font-size: 26rpx;
  color: #666;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  gap: 20rpx;
}

.loading text {
  color: #666;
  font-size: 28rpx;
}

.weather-update-time {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.error {
  color: #ee0a24;
}

.location-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.location-info image {
  width: 40rpx;
