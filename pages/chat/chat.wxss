.chat-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 聊天列表 */
.chats-card {
  padding: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chats-list {
  display: flex;
  flex-direction: column;
}

.chat-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.chat-item:last-child {
  border-bottom: none;
}

.chat-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.chat-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.chat-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
}

.chat-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chat-message {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  margin-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chat-unread {
  font-size: 20rpx;
  color: #fff;
  background-color: #ff4d4f;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 弹窗样式 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-content {
  padding: 30rpx;
}

.form-avatar {
  margin-top: 20rpx;
}

.form-avatar .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.avatar-upload {
  width: 160rpx;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-upload image {
  width: 100%;
  height: 100%;
}

.avatar-upload .van-icon {
  font-size: 48rpx;
  color: #999;
}

.popup-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

/* 自定义Vant组件样式 */
.van-button--primary {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-field__label {
  color: #333 !important;
}

.van-field__control {
  color: #666 !important;
}

.van-popup {
  border-radius: 24rpx 24rpx 0 0 !important;
} 