.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 20rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.couple-info {
  margin-top: 20rpx;
  text-align: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 10rpx;
}

.days {
  font-size: 28rpx;
  color: #969799;
}

.anniversary-list {
  margin-top: 20rpx;
}

.action-buttons {
  margin: 40rpx 20rpx;
}

/* 自定义Vant组件样式 */
.van-cell-group--inset {
  margin: 20rpx !important;
  border-radius: 16rpx !important;
  overflow: hidden !important;
}

.van-cell {
  padding: 20rpx !important;
}

.van-cell__title {
  color: #323233 !important;
}

.van-cell__value {
  color: #969799 !important;
}

.van-cell__label {
  color: #FF69B4 !important;
}

.add-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
}

.popup-content {
  padding: 20rpx;
  height: calc(100% - 200rpx);
  overflow-y: auto;
}

.popup-content .van-cell {
  margin-bottom: 20rpx;
}

.popup-content .van-switch {
  margin-left: auto;
}

.popup-buttons {
  display: flex;
  margin-top: 30rpx;
}

.cancel-button {
  margin-right: 20rpx !important;
  border-radius: 8rpx !important;
}

.confirm-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
}

.anniversary-swiper {
  height: 400rpx;
  margin-bottom: 40rpx;
}

.anniversary-card {
  background: #FF69B4;
  border-radius: 20rpx;
  padding: 40rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.anniversary-card .title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.anniversary-card .date {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.anniversary-card .days {
  font-size: 28rpx;
}

.add-anniversary {
  padding: 0 30rpx;
}

.add-btn {
  background: #cab4bf;
  color: white;
  border-radius: 20rpx;
  padding: 20rpx 0;
  text-align: center;
}

.anniversary-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 添加按钮 */
.add-button {
  margin: 20rpx 0;
}

/* 纪念日列表 */
.anniversary-list {
  display: flex;
  flex-direction: column;
}

.anniversary-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-header .days {
  font-size: 24rpx;
  color: #ff4d4f;
}

.item-header .days.today {
  color: #07c160;
}

.item-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.item-content .date {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.item-content .desc {
  font-size: 24rpx;
  color: #999;
}

.item-footer {
  display: flex;
  gap: 16rpx;
}

/* 弹窗样式 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

/* 详情弹窗 */
.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.detail-item .label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-item .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 自定义Vant组件样式 */
.van-button--primary {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-button--danger {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-tag--primary {
  background-color: #ff4d4f !important;
}

.van-tag--success {
  background-color: #07c160 !important;
} 