.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 20rpx;
}

.tabs {
  margin-bottom: 20rpx;
}

.tab-content {
  padding: 20rpx 0;
}

.action-buttons {
  margin: 40rpx 20rpx;
}

.popup-content {
  padding: 30rpx;
}

.popup-buttons {
  display: flex;
  margin-top: 30rpx;
}

/* 自定义Vant组件样式 */
.van-cell-group--inset {
  margin: 20rpx !important;
  border-radius: 16rpx !important;
  overflow: hidden !important;
}

.van-cell {
  padding: 20rpx !important;
}

.van-cell__title {
  color: #323233 !important;
}

.van-cell__label {
  color: #969799 !important;
}

.van-tabs__line {
  background-color: #FF69B4 !important;
}

.van-tab--active {
  color: #FF69B4 !important;
}

.add-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
}

.complete-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 4rpx !important;
}

.completed-tag {
  background-color: #FF69B4 !important;
  border: none !important;
}

.cancel-button {
  margin-right: 20rpx !important;
  border-radius: 8rpx !important;
}

.confirm-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
}

.christmas-tree {
  position: relative;
  height: 600rpx;
  margin-bottom: 40rpx;
}

.christmas-tree image {
  width: 100%;
  height: 100%;
}

.gifts {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.gift {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}

.gift image {
  width: 100%;
  height: 100%;
}

.wish-list {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.wish-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.wish-item:last-child {
  border-bottom: none;
}

.wish-item .content {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.wish-item .date {
  font-size: 24rpx;
  color: #999;
}

.add-wish {
  padding: 30rpx;
}

.add-btn {
  background: #FF69B4;
  color: white;
  border-radius: 20rpx;
  padding: 20rpx 0;
  text-align: center;
}

.wish-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 添加按钮 */
.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 77, 79, 0.3);
  z-index: 100;
}

.add-button .van-icon {
  color: #fff;
  font-size: 50rpx;
}

/* 愿望列表 */
.wish-list {
  margin-bottom: 120rpx;
}

.wish-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.wish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.wish-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.wish-status {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.wish-status.completed {
  color: #fff;
  background-color: #95ec69;
}

.wish-content {
  margin-bottom: 20rpx;
}

.wish-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.wish-progress {
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
  margin-right: 20rpx;
}

.progress-inner {
  height: 100%;
  background-color: #ff4d4f;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  min-width: 60rpx;
}

.wish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.wish-priority {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.wish-priority.high {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.wish-priority.medium {
  color: #ffa940;
  background-color: rgba(255, 169, 64, 0.1);
}

.wish-priority.low {
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

/* 弹窗样式 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-content {
  padding: 30rpx;
}

.popup-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

/* 详情弹窗样式 */
.detail-item {
  margin-bottom: 30rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.detail-value {
  font-size: 32rpx;
  color: #333;
}

.detail-progress {
  margin-top: 20rpx;
}

/* 自定义Vant组件样式 */
.van-field__label {
  color: #333;
}

.van-button--primary {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-button--danger {
  background-color: #ff4d4f !important;
  border: none !important;
}

/* 许愿树画布 */
.wish-tree {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
} 