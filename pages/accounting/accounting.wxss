.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 20rpx;
}

.summary {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.income, .expense {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
}

.income .amount {
  color: #4CAF50;
}

.expense .amount {
  color: #FF69B4;
}

.chart-container {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.chart {
  width: 100%;
  height: 400rpx;
}

.records {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.category {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
}

.amount.income {
  color: #4CAF50;
}

.amount.expense {
  color: #FF69B4;
}

.add-record {
  padding: 30rpx;
}

.add-btn {
  background: #FF69B4;
  color: white;
  border-radius: 20rpx;
  padding: 20rpx 0;
  text-align: center;
}

.summary-card {
  margin-bottom: 20rpx;
}

.tabs {
  margin-bottom: 20rpx;
}

.tab-content {
  padding: 20rpx 0;
}

.action-buttons {
  margin: 40rpx 20rpx;
}

.popup-content {
  padding: 30rpx;
}

.form-content {
  padding: 20rpx 0;
}

.popup-buttons {
  display: flex;
  margin-top: 30rpx;
}

/* 自定义Vant组件样式 */
.van-cell-group--inset {
  margin: 20rpx !important;
  border-radius: 16rpx !important;
  overflow: hidden !important;
}

.van-cell {
  padding: 20rpx !important;
}

.van-cell__title {
  color: #323233 !important;
}

.van-cell__value {
  color: #969799 !important;
}

.van-cell__label {
  color: #FF69B4 !important;
}

.van-tabs__line {
  background-color: #FF69B4 !important;
}

.van-tab--active {
  color: #FF69B4 !important;
}

.add-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
}

.cancel-button {
  margin-right: 20rpx !important;
  border-radius: 8rpx !important;
}

.confirm-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
}

.accounting-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 类型选择器 */
.type-selector {
  display: flex;
  padding: 20rpx;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.type-item.active {
  color: #ff4d4f;
  font-weight: bold;
}

.type-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #ff4d4f;
  border-radius: 2rpx;
}

/* 表单卡片 */
.form-card {
  padding: 20rpx;
}

/* 记录卡片 */
.records-card {
  padding: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.record-category {
  font-size: 28rpx;
  color: #333;
}

.record-amount {
  font-size: 28rpx;
  font-weight: bold;
}

.record-amount.income {
  color: #07c160;
}

.record-amount.expense {
  color: #ff4d4f;
}

.record-detail {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.record-remark {
  color: #666;
}

/* 分类选择器弹窗 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.category-item {
  width: 25%;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.category-item.active {
  color: #ff4d4f;
  font-weight: bold;
}

/* 自定义Vant组件样式 */
.van-button--primary {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-field__label {
  color: #333 !important;
}

.van-field__control {
  color: #666 !important;
}

.van-popup {
  border-radius: 24rpx 24rpx 0 0 !important;
} 