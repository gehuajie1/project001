.settings-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.id {
  font-size: 24rpx;
  color: #999;
}

/* 设置分组 */
.cell-group {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 退出登录按钮 */
.logout-container {
  padding: 40rpx 20rpx;
}

.logout-button {
  background-color: #ff4d4f !important;
  border: none !important;
}

/* 自定义Vant组件样式 */
.van-cell-group__title {
  padding: 20rpx 16rpx 8rpx;
  color: #969799;
  font-size: 28rpx;
}

.van-cell {
  padding: 20rpx 16rpx !important;
}

.van-cell__title {
  color: #323233 !important;
}

.van-cell__value {
  color: #969799 !important;
}

.van-button--primary {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-button--danger {
  background-color: #ff4d4f !important;
  border: none !important;
}

.settings-list {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item text {
  font-size: 28rpx;
  color: #333;
}

.setting-item image {
  width: 40rpx;
  height: 40rpx;
}

.section {
  margin-top: 20rpx;
}

/* 自定义Vant组件样式 */
.van-cell-group--inset {
  margin: 20rpx !important;
  border-radius: 16rpx !important;
  overflow: hidden !important;
}

.van-switch--on {
  background-color: #FF69B4 !important;
} 