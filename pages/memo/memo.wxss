.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 20rpx;
}

.tabs {
  margin-bottom: 20rpx;
}

.tab-content {
  padding: 20rpx 0;
}

.action-buttons {
  margin: 40rpx 20rpx;
}

.popup-content {
  padding: 30rpx;
}

.popup-buttons {
  display: flex;
  margin-top: 30rpx;
}

/* 自定义Vant组件样式 */
.van-cell-group--inset {
  margin: 20rpx !important;
  border-radius: 16rpx !important;
  overflow: hidden !important;
}

.van-cell {
  padding: 20rpx !important;
}

.van-cell__title {
  color: #323233 !important;
}

.van-cell__label {
  color: #969799 !important;
}

.van-tabs__line {
  background-color: #FF69B4 !important;
}

.van-tab--active {
  color: #FF69B4 !important;
}

.add-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
}

.complete-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 4rpx !important;
}

.completed-tag {
  background-color: #FF69B4 !important;
  border: none !important;
}

.cancel-button {
  margin-right: 20rpx !important;
  border-radius: 8rpx !important;
}

.confirm-button {
  background-color: #FF69B4 !important;
  border: none !important;
  border-radius: 8rpx !important;
}

.memo-list {
  margin-bottom: 30rpx;
}

.memo-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.memo-content {
  margin-bottom: 20rpx;
}

.memo-content .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.memo-content .content {
  font-size: 28rpx;
  color: #666;
}

.memo-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.memo-info .time {
  font-size: 24rpx;
  color: #999;
}

.add-memo {
  padding: 30rpx;
}

.add-btn {
  background: #FF69B4;
  color: white;
  border-radius: 20rpx;
  padding: 20rpx 0;
  text-align: center;
}

.memo-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 备忘录列表 */
.memos-card {
  padding: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.memos-list {
  display: flex;
  flex-direction: column;
}

.memo-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.memo-item:last-child {
  border-bottom: none;
}

.memo-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.memo-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.memo-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.memo-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.memo-status.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.memo-content {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.memo-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.memo-time-text {
  margin-left: 10rpx;
}

.memo-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.memo-tags {
  display: flex;
  gap: 10rpx;
}

.memo-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background-color: #f5f5f5;
  color: #666;
}

.memo-actions {
  display: flex;
  gap: 20rpx;
}

.memo-actions .van-icon {
  font-size: 32rpx;
  color: #999;
}

/* 弹窗样式 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-content {
  padding: 30rpx;
}

.form-tags {
  display: flex;
  gap: 30rpx;
  margin-top: 20rpx;
}

.popup-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

/* 自定义Vant组件样式 */
.van-button--primary {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-field__label {
  color: #333 !important;
}

.van-field__control {
  color: #666 !important;
}

.van-popup {
  border-radius: 24rpx 24rpx 0 0 !important;
}

.van-checkbox__icon--checked {
  background-color: #ff4d4f !important;
  border-color: #ff4d4f !important;
}

/* 备忘录列表 */
.memo-list {
  margin-bottom: 120rpx;
}

.memo-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.memo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.memo-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.memo-status {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.memo-status.completed {
  color: #fff;
  background-color: #95ec69;
}

.memo-content {
  margin-bottom: 20rpx;
}

.memo-description {
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.memo-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.memo-priority {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.memo-priority.high {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.memo-priority.medium {
  color: #ffa940;
  background-color: rgba(255, 169, 64, 0.1);
}

.memo-priority.low {
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

