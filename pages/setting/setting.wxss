/* pages/setting/setting.wxss */
.profile-header {
  position: relative;
  height: 30vh;
  background-color: var(--primary-color);
  margin-bottom: var(--spacing-unit);
  overflow: hidden;
}

.header-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.user-info {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  padding: var(--spacing-unit);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  width: 20%;
  height: 13vh;
  margin-bottom: var(--spacing-unit);
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: var(--shadow);
}

.nickname {
  color: #fff;
  font-size: var(--font-size-normal);
  text-shadow: var(--shadow);
}

.settings-list {
  background-color: #fff;
  border-radius: var(--border-radius);
  margin: var(--spacing-unit);
  box-shadow: var(--shadow);
}

.setting-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-unit);
  height: 10vh;
}

.item-label {
  width: 30%;
  font-size: var(--font-size-normal);
  color: var(--text-color);
}

.item-value {
  flex: 1;
  text-align: center;
  font-size: var(--font-size-normal);
  color: #666;
}

.item-arrow {
  width: 20rpx;
  color: #999;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 0 var(--spacing-unit);
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .profile-header {
    max-width: 750rpx;
    margin: 0 auto var(--spacing-unit);
  }
  
  .settings-list {
    max-width: 750rpx;
    margin: var(--spacing-unit) auto;
  }
}
