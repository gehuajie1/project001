<view class="container">
    <view class="profile-header">
        <image class="header-bg" src="{{bcImgSrc}}" mode="aspectFill"></image>
        <view class="user-info">
            <view class="avatar-container">
                <image class="avatar" src="{{user.icon}}" mode="aspectFill"></image>
            </view>
            <view class="nickname">{{user.nickName}}</view>
        </view>
    </view>

    <view class="settings-list">
        <view class="setting-item">
            <view class="item-label">绑定手机</view>
            <view class="item-value">{{user.phone||"未绑定"}}</view>
            <view class="item-arrow">></view>
        </view>
        <view class="divider"></view>
        
        <view class="setting-item">
            <view class="item-label">密码管理</view>
            <view class="item-value"></view>
            <view class="item-arrow">></view>
        </view>
        <view class="divider"></view>
        
        <view class="setting-item">
            <view class="item-label">我要留言</view>
            <view class="item-value"></view>
            <view class="item-arrow">></view>
        </view>
        <view class="divider"></view>
    </view>
</view>