.album-container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 相册列表 */
.albums-card {
  padding: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.albums-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.album-item {
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.album-cover {
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
}

.album-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  color: #fff;
}

.album-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.album-count {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 照片列表 */
.photos-card {
  padding: 20rpx;
}

.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.photo-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 4rpx;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.photo-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
}

.photo-date {
  font-size: 20rpx;
  color: #fff;
}

/* 弹窗样式 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-content {
  padding: 30rpx;
}

.form-cover {
  margin-top: 20rpx;
}

.form-cover .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.cover-upload {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-upload image {
  width: 100%;
  height: 100%;
}

.cover-upload .van-icon {
  font-size: 48rpx;
  color: #999;
}

.photo-upload {
  margin-top: 20rpx;
}

.photo-upload .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.upload-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 4rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.upload-item image {
  width: 100%;
  height: 100%;
}

.upload-item .van-icon {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  padding: 4rpx;
}

.upload-item.add {
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-item.add .van-icon {
  position: static;
  font-size: 48rpx;
  color: #999;
  background: none;
  padding: 0;
}

.popup-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

/* 自定义Vant组件样式 */
.van-button--primary {
  background-color: #ff4d4f !important;
  border: none !important;
}

.van-field__label {
  color: #333 !important;
}

.van-field__control {
  color: #666 !important;
}

.van-popup {
  border-radius: 24rpx 24rpx 0 0 !important;
} 