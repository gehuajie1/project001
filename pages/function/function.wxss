.container {
  padding: 30rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.function-item image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.function-item text {
  font-size: 28rpx;
  color: #333;
}

.tab-content {
  padding: 20rpx;
}

.action-button {
  margin-top: 30rpx !important;
  background-color: #FF69B4 !important;
  border: none !important;
}

/* 自定义Vant组件样式 */
.van-tabs__line {
  background-color: #FF69B4 !important;
}

.van-tab--active {
  color: #FF69B4 !important;
}

.van-cell {
  padding: 20rpx !important;
}

.van-cell__title {
  color: #969799 !important;
}

.van-cell__value {
  color: #323233 !important;
  font-weight: 500 !important;
}

.van-cell-group--inset {
  margin: 20rpx !important;
  border-radius: 16rpx !important;
  overflow: hidden !important;
}

.function-container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 顶部用户信息 */
.header {
  background: linear-gradient(135deg, #FF69B4, #FFB6C1);
  padding: 40rpx 30rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="rgba(255,255,255,0.1)"/></svg>') no-repeat;
  background-size: 200rpx;
  opacity: 0.1;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.welcome {
  font-size: 24rpx;
  opacity: 0.9;
}

.date {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 功能列表 */
.function-list {
  padding: 30rpx;
  margin-top: -30rpx;
}

.function-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.function-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 8rpx;
  display: block;
}

.item-desc {
  font-size: 24rpx;
  color: #969799;
  display: block;
}

/* 不同模块的图标背景色 */
.function-item:nth-child(1) .item-icon {
  background-color: rgba(255, 77, 79, 0.1);
}

.function-item:nth-child(2) .item-icon {
  background-color: rgba(7, 193, 96, 0.1);
}

.function-item:nth-child(3) .item-icon {
  background-color: rgba(25, 137, 250, 0.1);
}

.function-item:nth-child(4) .item-icon {
  background-color: rgba(255, 151, 106, 0.1);
}

.function-item:nth-child(5) .item-icon {
  background-color: rgba(114, 50, 221, 0.1);
}

.function-item:nth-child(6) .item-icon {
  background-color: rgba(238, 10, 36, 0.1);
} 